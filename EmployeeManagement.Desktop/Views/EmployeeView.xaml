<Window x:Class="EmployeeManagement.Desktop.Views.EmployeeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:EmployeeManagement.Desktop.ViewModels"
             Width="800" Height="600"
             Title="{Binding Title, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}">
    <Window.DataContext>
        <vm:EmployeeViewModel />
    </Window.DataContext>
    <Grid Background="White">
        <DockPanel VerticalAlignment="Top">
            <Border DockPanel.Dock="Top">
                <GroupBox Header="Dane osobowe" Margin="6">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="0.5*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <Label Content="Imię: " Grid.Column="0" Grid.Row="0" VerticalContentAlignment="Center"/>
                        <TextBox Text="{Binding FirstName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}" Grid.Column="1" Grid.Row="0" Margin="3,3,3,15"/>

                        <Label Content="Nazwisko: " Grid.Column="0" Grid.Row="1" VerticalContentAlignment="Center" />
                        <TextBox Text="{Binding LastName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}" Grid.Column="1" Grid.Row="1" Margin="3,3,3,15"/>

                        <Label Content="Adres zamieszkania: " Grid.Column="0" Grid.Row="2" VerticalContentAlignment="Center" />
                        <TextBox Text="{Binding Address, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}" Grid.Column="1" Grid.Row="2" Margin="3,3,3,15"/>

                        <Label Content="Miasto: " Grid.Column="0" Grid.Row="3" VerticalContentAlignment="Center" />
                        <ComboBox IsEnabled="{Binding CanCity}" SelectedItem="{Binding City, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" ItemsSource="{Binding Cities}" DisplayMemberPath="Name"  Grid.Column="1" Grid.Row="3" Margin="3,3,3,15"/>

                        <Label Content="Kod pocztowy: " Grid.Column="0" Grid.Row="4" VerticalContentAlignment="Center" />
                        <TextBox Text="{Binding PostalCode, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}" Grid.Column="1" Grid.Row="4" Margin="3,3,3,15"/>
                    </Grid>
                </GroupBox>
            </Border>
            <Border DockPanel.Dock="Top">
                <GroupBox Header="Dane pracownicze" Margin="6,6,6,6">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="0.5*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <Label Content="Stanowisko: " Grid.Column="0" Grid.Row="0" VerticalContentAlignment="Center" />
                        <ComboBox IsEnabled="{Binding CanJob}" ItemsSource="{Binding Jobs}" SelectedItem="{Binding Job, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}" Grid.Column="1" Grid.Row="0" Margin="3,3,3,15"/>

                        <Label Content="Data zatrudnienia: " Grid.Column="0" Grid.Row="1" VerticalContentAlignment="Center" />
                        <DatePicker SelectedDate="{Binding EmploymentDate, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}" Grid.Column="1" Grid.Row="1" Margin="3,3,3,15"/>
                    </Grid>
                </GroupBox>
            </Border>
        </DockPanel>
        <Border VerticalAlignment="Bottom">
            <Grid Height="50">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Button Content="Akceptuj" Grid.Column="0" Command="{Binding AcceptEmployeeCommand}" Margin="6" />
                <Button Content="Anuluj" Grid.Column="1" Command="{Binding CancelEmployeeCommand}" Margin="6" />
            </Grid>
        </Border>
    </Grid>
</Window>
